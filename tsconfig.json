{
    "compilerOptions": {
        "noImplicitAny": false,
        "removeComments": true,
        "jsx": "react",
        "sourceMap": true,
        "jsxFactory": "h",
        "baseUrl": ".",
        "paths": {
            "lib/*": ["./src/lib/*"]
        },
        "lib": [
            "dom",
            "esnext"
        ]
        
    },
    "include": [
        "src/**/*",
        "lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
   
}